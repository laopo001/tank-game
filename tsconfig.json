{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "newLine": "lf",
    "module": "esnext",
    "importHelpers": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "lib": [
      "webworker",
      "dom",
      "es2015",
      "es2017",
      "es2016",
      "es2018",
      "esnext"
    ],
    "noImplicitAny": false,
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "outDir": "lib",
    "types": [],
    "allowSyntheticDefaultImports": true,
    // "baseUrl": "./",
    // "paths": {}
  },
  "include": [
    "src",
    "typings",
    "tests",
    "testsOnbrowser",
    "demo"
  ],
  "exclude": [
    "node_modules",
  ]
}